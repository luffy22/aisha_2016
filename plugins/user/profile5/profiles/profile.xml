<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="profile">
		<fieldset name="profile"
			label="PLG_USER_PROFILE_SLIDER_LABEL"
		>
			<field
				name="address1"
				type="text"
                                class="form-control"
				id="address1"
				description="PLG_USER_PROFILE_FIELD_ADDRESS1_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_ADDRESS1_LABEL"
				size="30"
			/>

			<field
				name="address2"
				type="text"
                                class="form-control"
				id="address2"
				description="PLG_USER_PROFILE_FIELD_ADDRESS2_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_ADDRESS2_LABEL"
				size="30"
			/>

			<field
				name="city"
				type="text"
                                class="form-control"
				id="city"
				description="PLG_USER_PROFILE_FIELD_CITY_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_CITY_LABEL"
				size="30" onclick="javscript:showme()"
			/>

			<field
				name="state"
				type="text"
                                class="form-control"
				id="region"
				description="PLG_USER_PROFILE_FIELD_REGION_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_REGION_LABEL"
				size="30"
			/>

			<field
				name="country"
				type="text"
                                class="form-control"
				id="country"
				description="PLG_USER_PROFILE_FIELD_COUNTRY_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_COUNTRY_LABEL"
				size="30"
			/>

			<field
				name="postal_code"
				type="text"
                                class="form-control"
				id="postal_code"
				description="PLG_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
				size="30"
			/>

			<field
				name="phone"
				type="text"
                                class="form-control"
				id="phone"
				description="PLG_USER_PROFILE_FIELD_PHONE_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_PHONE_LABEL"
				size="30"
			/>
                        <field
				name="mobile"
				type="number"
                                class="form-control"
				id="mobile"
				description="PLG_USER_PROFILE_FIELD_MOBILE_DESC"
				filter="string"
				label="PLG_USER_PROFILE_FIELD_PHONE_LABEL"
				size="30"
			/>
			<field
				name="website"
				type="url"
                                class="form-control"
				id="website"
				description="PLG_USER_PROFILE_FIELD_WEB_SITE_DESC"
				filter="url"
				label="PLG_USER_PROFILE_FIELD_WEB_SITE_LABEL"
				size="30"
			/>
			<field
				name="info"
				type="textarea"
                                class="form-control"
				description="PLG_USER_PROFILE_FIELD_ABOUT_ME_DESC"
				label="PLG_USER_PROFILE_FIELD_ABOUT_ME_LABEL"
				cols="30"
				rows="5"
				filter="safehtml"
			/>
			
		</fieldset>
	</fields>
</form>
